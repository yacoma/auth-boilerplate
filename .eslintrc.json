{
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "extends": ["standard", "standard-jsx", "plugin:prettier/recommended"],
  "rules": {
    "linebreak-style": ["error", "unix"]
  },
  "globals": {
    "localStorage": true,
    "URLSearchParams": true,
    "location": true,
    "history": true,
    "test": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "authHeader": true,
    "jsonResponse": true
  }
}
